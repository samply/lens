{
  "name": "@samply/lens",
  "description": "A web component library for clinical data search and visualisation",
  "version": "0.4.6",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/samply/lens.git"
  },
  "//": "Settings recommended by Vite but without CommonJS exports, see https://vite.dev/guide/build#library-mode",
  "type": "module",
  "files": [
    "dist",
    "schema"
  ],
  "module": "dist/lens.js",
  "types": "dist/lens.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lens.js"
    },
    "./style.css": {
      "import": "./dist/lens.css"
    }
  },
  "scripts": {
    "start": "npm run dev -s",
    "dev": "vite packages/demo",
    "build": "rimraf dist && vite build",
    "build:demo": "vite build packages/demo",
    "preview": "vite preview packages/demo",
    "check": "svelte-check",
    "lint": "lint-staged",
    "watch": "rimraf dist && vite build --watch",
    "link": "wait-on dist/types.d.ts && npm link",
    "prepublishOnly": "npm run build -s",
    "security:check": "npm audit --omit=dev --audit-level high",
    "prepare": "husky install",
    "version": "npm version -m \"build: release version %s\"",
    "schemagen": "bash scripts/generate-json-schema.bash",
    "schemacheck": "bash scripts/generate-json-schema.bash --check",
    "schemavalid": "bash scripts/validate-json-schema.bash"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tsconfig/svelte": "^5.0.4",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "ajv-cli": "^5.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^48.11.0",
    "eslint-plugin-svelte": "^2.46.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.8",
    "rimraf": "^5.0.10",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "ts-json-schema-generator": "^2.3.0",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3",
    "vite": "^6.2.1",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^3.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chart.js": "^4.4.6",
    "uuid": "^11.0.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,svelte}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}