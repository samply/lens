{
    "name": "@samply/lens",
    "description": "A web component library for clinical data search and visualisation",
    "version": "0.5.0-alpha",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/samply/lens.git"
    },
    "//": "Settings recommended by Vite but without CommonJS exports, see https://vite.dev/guide/build#library-mode",
    "type": "module",
    "files": [
        "dist",
        "schema"
    ],
    "module": "dist/lens.js",
    "types": "dist/lens.d.ts",
    "exports": {
        ".": "./dist/lens.js",
        "./style.css": "./dist/lens.css"
    },
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "check": "svelte-check",
        "prepublishOnly": "vite build",
        "prepare": "husky",
        "version": "npm version -m \"chore: release %s\"",
        "schemagen": "bash scripts/generate-json-schema.bash",
        "schemacheck": "bash scripts/generate-json-schema.bash --check",
        "book": "mdbook serve book --open",
        "typedoc": "typedoc packages/lib/src/index.ts --watch"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.0",
        "@commitlint/config-conventional": "^19.8.0",
        "@eslint/js": "^9.22.0",
        "@sveltejs/vite-plugin-svelte": "^5.0.3",
        "@types/uuid": "^10.0.0",
        "ajv-cli": "^5.0.0",
        "eslint": "^9.22.0",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-svelte": "^3.1.0",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.0",
        "prettier": "^3.5.3",
        "prettier-plugin-svelte": "^3.3.3",
        "rollup": "^4.36.0",
        "svelte": "^5.23.0",
        "svelte-check": "^4.1.5",
        "ts-json-schema-generator": "^2.3.0",
        "typedoc": "^0.28.1",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.26.1",
        "vite": "^6.2.1",
        "vite-plugin-dts": "^4.5.3"
    },
    "dependencies": {
        "ajv": "^8.17.1",
        "ajv-formats": "^3.0.1",
        "chart.js": "^4.4.8",
        "uuid": "^11.1.0"
    },
    "lint-staged": {
        "*": [
            "eslint --fix",
            "prettier --ignore-unknown --write"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "body-max-line-length": [
                0,
                "always"
            ],
            "footer-max-line-length": [
                0,
                "always"
            ]
        }
    }
}
