{
    "name": "@samply/lens",
    "description": "A web component library for clinical data search and visualisation",
    "version": "0.6.3",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/samply/lens.git"
    },
    "//": "Settings recommended by Vite but without CommonJS exports, see https://vite.dev/guide/build#library-mode",
    "type": "module",
    "files": [
        "dist",
        "schema"
    ],
    "module": "dist/lens.js",
    "types": "dist/lens.d.ts",
    "exports": {
        ".": "./dist/lens.js",
        "./style.css": "./dist/lens.css"
    },
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "build:demo": " vite build --config vite.config.demo.js",
        "check": "svelte-check",
        "prepublishOnly": "vite build",
        "prepare": "husky",
        "version": "npm version -m \"chore: release %s\"",
        "schemagen": "bash scripts/generate-json-schema.bash",
        "book": "mdbook serve book --open",
        "typedoc": "typedoc src/index.ts --watch",
        "test": "vitest"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@sveltejs/vite-plugin-svelte": "^6.2.1",
        "@types/node": "^24.10.1",
        "@types/uuid": "^11.0.0",
        "ajv-cli": "^5.0.0",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-svelte": "^3.13.0",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "jsdom": "^27.2.0",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.1",
        "prettier-plugin-svelte": "^3.4.0",
        "rollup": "^4.53.3",
        "svelte": "^5.45.2",
        "svelte-check": "^4.3.4",
        "ts-json-schema-generator": "^2.4.0",
        "typedoc": "^0.28.14",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.48.0",
        "vite": "^7.2.4",
        "vite-plugin-dts": "^4.5.4",
        "vitest": "^4.0.14"
    },
    "dependencies": {
        "ajv": "^8.17.1",
        "ajv-formats": "^3.0.1",
        "chart.js": "^4.5.1",
        "uuid": "^13.0.0"
    },
    "lint-staged": {
        "*": [
            "eslint --fix",
            "prettier --ignore-unknown --write"
        ]
    }
}
