{
  "$ref": "#/definitions/LensOptions",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "BackendOptions": {
      "additionalProperties": false,
      "properties": {
        "blazes": {
          "items": {
            "$ref": "#/definitions/BlazeOption"
          },
          "type": "array"
        },
        "customAstBackends": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "spots": {
          "items": {
            "$ref": "#/definitions/SpotOption"
          },
          "type": "array"
        }
      },
      "type": "object"
    },
    "BlazeOption": {
      "additionalProperties": false,
      "properties": {
        "auth": {
          "type": "string"
        },
        "backendMeasures": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "url",
        "backendMeasures"
      ],
      "type": "object"
    },
    "ChartOption": {
      "additionalProperties": false,
      "properties": {
        "accumulatedValues": {
          "items": {
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string"
              },
              "values": {
                "items": {
                  "type": "string"
                },
                "type": "array"
              }
            },
            "required": [
              "name",
              "values"
            ],
            "type": "object"
          },
          "type": "array"
        },
        "aggregations": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "hintText": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "legendMapping": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object"
        },
        "tooltips": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object"
        }
      },
      "type": "object"
    },
    "ChartOptions": {
      "additionalProperties": {
        "$ref": "#/definitions/ChartOption"
      },
      "type": "object"
    },
    "HeaderData": {
      "additionalProperties": false,
      "properties": {
        "aggregatedDataKeys": {
          "items": {
            "additionalProperties": false,
            "properties": {
              "groupCode": {
                "type": "string"
              },
              "stratifierCode": {
                "type": "string"
              },
              "stratumCode": {
                "type": "string"
              }
            },
            "type": "object"
          },
          "type": "array"
        },
        "dataKey": {
          "type": "string"
        },
        "hintText": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "title": {
          "type": "string"
        }
      },
      "required": [
        "title"
      ],
      "type": "object"
    },
    "IconUrls": {
      "additionalProperties": false,
      "properties": {
        "addIconUrl": {
          "description": "Icon for the button that adds items from the catalogue to the search bar",
          "type": "string"
        },
        "deleteUrl": {
          "description": "Icon for a delete button used in various places",
          "type": "string"
        },
        "infoUrl": {
          "description": "Icon for an info button used in various places",
          "type": "string"
        },
        "toggleIconUrl": {
          "description": "Icon for the button that expands and collapses items in the catalogue",
          "type": "string"
        }
      },
      "type": "object"
    },
    "LensOptions": {
      "additionalProperties": false,
      "properties": {
        "backends": {
          "$ref": "#/definitions/BackendOptions"
        },
        "catalogueKeyToResponseKeyMap": {
          "items": {
            "items": {
              "type": "string"
            },
            "maxItems": 2,
            "minItems": 2,
            "type": "array"
          },
          "type": "array"
        },
        "chartOptions": {
          "$ref": "#/definitions/ChartOptions"
        },
        "facetCountBackendURL": {
          "description": "If set, fetch and display facet counts (number of results per discrete value) in the catalogue from this backend URL.",
          "type": "string"
        },
        "iconOptions": {
          "$ref": "#/definitions/IconUrls",
          "description": "Allows customizing icons by specifying image files"
        },
        "language": {
          "description": "Two letter language code of the application language",
          "type": "string"
        },
        "negotiateOptions": {
          "$ref": "#/definitions/NegotiateOptions"
        },
        "projectmanagerOptions": {
          "$ref": "#/definitions/ProjectManagerOptions"
        },
        "resultSummaryOptions": {
          "$ref": "#/definitions/ResultSummaryOptions"
        },
        "siteMappings": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object"
        },
        "tableOptions": {
          "$ref": "#/definitions/TableOptions"
        },
        "texts": {
          "$ref": "#/definitions/Texts",
          "description": "Allows to customize texts and add new translations"
        }
      },
      "type": "object"
    },
    "NegotiateOptions": {
      "additionalProperties": false,
      "properties": {
        "authorizationHeader": {
          "description": "The value of the Authorization header for the POST request.",
          "type": "string"
        },
        "siteMappings": {
          "description": "Maps the site names in the results table to the unique identifiers expected by the BBMRI Negotiator.",
          "items": {
            "$ref": "#/definitions/NegotiateOptionsSiteMapping"
          },
          "type": "array"
        },
        "url": {
          "description": "The URL of the BBMRI Negotiator API endpoint that creates a request to apply for access. The URL path is typically /api/v3/requests. Lens will send a POST request to the URL to start the application process.",
          "type": "string"
        }
      },
      "required": [
        "url",
        "authorizationHeader",
        "siteMappings"
      ],
      "type": "object"
    },
    "NegotiateOptionsSiteMapping": {
      "additionalProperties": false,
      "properties": {
        "collection": {
          "description": "Unique identifier of the collection, e.g. \"bbmri-eric:ID:DE_RWTHCBMB:collection:RWTHCBMB_BC\"",
          "type": "string"
        },
        "collection_name": {
          "description": "Name of the collection, e.g. \"Collection of RWTH cBMB Broad Consent Aachen\"",
          "type": "string"
        },
        "site": {
          "description": "Name of the site, e.g. \"Aachen\". This must correspond to the site names as they are displayed in the results table.",
          "type": "string"
        },
        "site_id": {
          "description": "Unique identifier of the site, e.g. \"bbmri-eric:ID:DE_RWTHCBMB\"",
          "type": "string"
        }
      },
      "required": [
        "site",
        "collection",
        "site_id",
        "collection_name"
      ],
      "type": "object"
    },
    "ProjectManagerOptions": {
      "additionalProperties": false,
      "properties": {
        "editProjectUrl": {
          "type": "string"
        },
        "newProjectUrl": {
          "type": "string"
        },
        "siteMappings": {
          "items": {
            "$ref": "#/definitions/ProjectManagerOptionsSiteMapping"
          },
          "type": "array"
        }
      },
      "required": [
        "newProjectUrl",
        "editProjectUrl",
        "siteMappings"
      ],
      "type": "object"
    },
    "ProjectManagerOptionsSiteMapping": {
      "additionalProperties": false,
      "properties": {
        "collection": {
          "type": "string"
        },
        "site": {
          "type": "string"
        }
      },
      "required": [
        "site",
        "collection"
      ],
      "type": "object"
    },
    "ResultSummaryOptions": {
      "additionalProperties": false,
      "properties": {
        "dataTypes": {
          "items": {
            "$ref": "#/definitions/HeaderData"
          },
          "type": "array"
        },
        "infoButtonText": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      },
      "required": [
        "dataTypes"
      ],
      "type": "object"
    },
    "SpotOption": {
      "additionalProperties": false,
      "properties": {
        "backendMeasures": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "sites": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "url": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "backendMeasures",
        "url",
        "sites"
      ],
      "type": "object"
    },
    "TableOptions": {
      "additionalProperties": false,
      "properties": {
        "headerData": {
          "items": {
            "$ref": "#/definitions/HeaderData"
          },
          "type": "array"
        }
      },
      "required": [
        "headerData"
      ],
      "type": "object"
    },
    "Texts": {
      "additionalProperties": {
        "additionalProperties": {
          "type": "string"
        },
        "type": "object"
      },
      "description": "A map of texts that are displayed in the application. The keys are used to look up the text in the application code. The values are objects that map two letter language codes to the actual text.",
      "type": "object"
    }
  }
}

